<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <include app:graph="@navigation/nav_movies" />

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.demo.movies.splashscreen.SplashScreenFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash_screen">

        <action
            android:id="@+id/action_splashfragmnet_to_moviesFragment"
            app:destination="@id/nav_movies"
            app:popUpTo="@id/SplashFragment"
            app:popUpToInclusive="true" />
    </fragment>


</navigation>